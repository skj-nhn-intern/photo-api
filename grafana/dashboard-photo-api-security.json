{
  "dashboard": {
    "title": "Photo API - Security & Rate Limiting",
    "tags": ["photo-api", "security", "rate-limiting"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Rate Limit 차단 현황",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(photo_api_rate_limit_hits_total[5m]) * 60",
            "legendFormat": "{{endpoint}} - {{client_id}}"
          }
        ],
        "yaxes": [
          {
            "label": "차단 횟수/분",
            "format": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Rate Limit 허용률",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(photo_api_rate_limit_requests_total{status=\"allowed\"}[5m])) / sum(rate(photo_api_rate_limit_requests_total[5m])) * 100",
            "legendFormat": "허용률"
          }
        ],
        "format": "percent",
        "thresholds": {
          "mode": "absolute",
          "steps": [
            {"value": 0, "color": "red"},
            {"value": 80, "color": "yellow"},
            {"value": 90, "color": "green"}
          ]
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "엔드포인트별 Rate Limit 차단",
        "type": "barchart",
        "targets": [
          {
            "expr": "sum by (endpoint) (rate(photo_api_rate_limit_hits_total[5m])) * 60",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "IP별 Rate Limit 차단 (상위 10개)",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (client_id) (rate(photo_api_rate_limit_hits_total[5m])) * 60)",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "공유 링크 접근 현황",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (token_status, result) (rate(photo_api_share_link_access_total[5m])) * 60",
            "legendFormat": "{{token_status}} - {{result}}"
          }
        ],
        "yaxes": [
          {
            "label": "접근 횟수/분",
            "format": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "브루트포스 공격 시도 (상위 10개 IP)",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (client_id) (rate(photo_api_share_link_brute_force_attempts_total[5m])) * 60)",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "공유 링크 이미지 접근 패턴",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (photo_in_album) (rate(photo_api_share_link_image_access_total[5m])) * 60",
            "legendFormat": "{{photo_in_album}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "인증된 사용자 vs 공유 링크 이미지 접근",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum by (access_type) (rate(photo_api_image_access_total[5m])) * 60",
            "legendFormat": "{{access_type}}"
          }
        ],
        "yaxes": [
          {
            "label": "접근 횟수/분",
            "format": "short"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 9,
        "title": "이미지 접근 응답 시간 (P95)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (le, access_type) (rate(photo_api_image_access_duration_seconds_bucket[5m])))",
            "legendFormat": "{{access_type}} - P95"
          }
        ],
        "yaxes": [
          {
            "label": "초",
            "format": "s"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "보안 요약",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(rate(photo_api_rate_limit_hits_total[5m])) / sum(rate(photo_api_rate_limit_requests_total[5m]))) * 100",
            "legendFormat": "Rate Limit 차단률"
          },
          {
            "expr": "sum(rate(photo_api_share_link_brute_force_attempts_total[5m])) / sum(rate(photo_api_share_link_access_total[5m])) * 100",
            "legendFormat": "브루트포스 시도율"
          },
          {
            "expr": "sum(rate(photo_api_image_access_total{result=\"success\"}[5m])) / sum(rate(photo_api_image_access_total[5m])) * 100",
            "legendFormat": "이미지 접근 성공률"
          }
        ],
        "format": "percent",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      }
    ],
    "version": 1,
    "schemaVersion": 27
  }
}
